@model Supermarket_Application.Models.Category

@{
    ViewData["Title"] = "Details";
}

@if (User.IsInRole(Supermarket_Application.Constants.AdminRole))
{
    <h1 class="text-center">Details</h1>

    <div>
        <h4 class="text-center">Category</h4>
        <hr />
        <dl class="row d-flex justify-content-center align-items-center">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
    </div>
    <div>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.CategoryID">Edit</a> |
        <a class="btn btn-success" asp-action="Index">Back to List</a>
    </div>

}
else
{
    <partial name="_AccessDenied" />
}

